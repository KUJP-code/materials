= render 'shared/subtitle', text: "Welcome, #{@user.name}"

%main.flex.flex-col.gap-3.p-3
  - if @announcements.any?
    = render 'shared/announcement_list', announcements: @announcements
  %h3 You're part of the sales team
  %h3= @user.email

  = link_to 'Edit',
            edit_organisation_sale_path(@user.organisation_id, @user),
            class: 'btn btn-secondary'
