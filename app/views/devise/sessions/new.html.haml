= render 'devise/nav'

%main.flex.justify-center.items-center.p-3
  = form_for resource,
             as: resource_name,
             url: session_path(resource_name),
             html: { class: 'flex flex-col items-center justify-between w-full md:w-1/3 h-4/5 bg-white rounded p-12 overflow-y-scroll overflow-x-clip' } do |f|
    = image_tag 'landing_logo.svg', class: 'w-4/5 md:w-3/5'

    .relative
      = f.label :email, class: 'absolute -top-3 left-3 bg-white px-2 font-bold text-lg'
      = f.email_field :email,
                      autofocus: true, autocomplete: 'email',
                      class: 'p-3 border-secondary'

    .relative
      = f.label :password, class: 'absolute -top-3 left-3 bg-white px-2 font-bold text-lg'
      = f.password_field :password,
                         autocomplete: 'current-password',
                         class: 'p-3 border-secondary'

    .form-check
      = f.check_box :remember_me
      = f.label :remember_me

    = f.submit t('.sign_in'),
               class: 'btn btn-secondary text-xl'

    %small.text-center.underline.text-secondary-50
      = link_to t('.forgot_your_password'),
                new_password_path(resource_name)
