%turbo-frame{ id: "student_#{@student.id}_icon" }
  .p-6.flex.flex-col.items-center
    %h3.w-full.font-semibold.text-lg.sticky.top-0.bg-white.text-center
      = t('.select_icon')
    .flex.flex-wrap.justify-center.items-center.justify-items-center.gap-4
      - @icon_choices.each do |icon|
        = button_to student_path(@student),
                    method: :patch,
                    class: 'flex flex-col items-center p-2 gap-2',
                    params: { student: { icon_preference: icon } },
                    data: { turbo: false } do
          = image_tag icon_path(icon), class: 'w-16 h-16'
